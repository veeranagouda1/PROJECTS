# Travel Planner - Environment Variables Template
# Copy this to .env and fill in your actual values

# ============================================
# DATABASE
# ============================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=travel_db
DB_USER=travel_user
DB_PASSWORD=your_secure_password_here
DB_POOL_SIZE=10
DB_MAX_IDLE_TIME=600000

# ============================================
# APPLICATION
# ============================================
APP_ENV=development
APP_DEBUG=false
APP_PORT=8080

# ============================================
# JWT SECURITY
# ============================================
JWT_SECRET=your-very-long-secret-key-minimum-32-characters-recommended-64
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# ============================================
# TWILIO SMS CONFIGURATION
# Get credentials from: https://www.twilio.com/console
# ============================================
TWILIO_ENABLED=true
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# ============================================
# EMAIL CONFIGURATION (Gmail SMTP)
# Generate App Password: https://myaccount.google.com/apppasswords
# ============================================
MAIL_ENABLED=true
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USERNAME=your-email@gmail.com
EMAIL_SMTP_PASSWORD=your-16-character-app-password
EMAIL_SMTP_FROM=noreply@travelplanner.com
EMAIL_SMTP_FROM_NAME=Travel Planner

# ============================================
# GROQ AI CONFIGURATION (for incident classification)
# Get API Key from: https://console.groq.com
# ============================================
GROQ_ENABLED=true
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=mixtral-8x7b-32768
GROQ_MAX_TOKENS=1024
GROQ_TEMPERATURE=0.7

# Alternative: OpenAI
# OPENAI_API_KEY=your_openai_api_key
# OPENAI_MODEL=gpt-3.5-turbo

# ============================================
# FIREBASE PUSH NOTIFICATIONS
# Download service account JSON from Firebase Console
# ============================================
FIREBASE_ENABLED=false
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY=your-private-key
FIREBASE_CLIENT_EMAIL=your-client-email@firebase.gserviceaccount.com
FIREBASE_DATABASE_URL=https://your-project.firebaseio.com

# ============================================
# AWS S3 (for image upload/storage)
# Get credentials from AWS IAM Console
# ============================================
S3_ENABLED=false
S3_BUCKET_NAME=travel-planner-dev
S3_ACCESS_KEY_ID=your_access_key_id
S3_SECRET_ACCESS_KEY=your_secret_access_key
S3_REGION=us-east-1
S3_ENDPOINT=https://s3.amazonaws.com

# ============================================
# CORS CONFIGURATION
# ============================================
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
CORS_ALLOWED_HEADERS=*
CORS_MAX_AGE=3600

# ============================================
# FEATURE FLAGS
# ============================================
FEATURE_OFFLINE_SOS=true
FEATURE_EMERGENCY_CONTACTS=true
FEATURE_POLICE_DASHBOARD=true
FEATURE_GEO_FENCING=false
FEATURE_AI_CLASSIFICATION=true
FEATURE_PUSH_NOTIFICATIONS=false
FEATURE_PDF_EXPORT=false
FEATURE_LOCATION_SHARING=false

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=INFO
LOG_FILE=logs/travel-planner.log
LOG_MAX_SIZE=10MB
LOG_MAX_HISTORY=30

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MINUTES=15

# ============================================
# NOTIFICATION RETRY CONFIGURATION
# ============================================
NOTIFICATION_MAX_RETRIES=3
NOTIFICATION_RETRY_DELAY_SECONDS=300
NOTIFICATION_TIMEOUT_SECONDS=30

# ============================================
# FRONTEND CONFIGURATION (for npm)
# ============================================
VITE_API_BASE_URL=http://localhost:8080
VITE_APP_NAME=Travel Planner
VITE_APP_VERSION=1.0.0
VITE_ENABLE_ANALYTICS=false

# ============================================
# OFFLINE/SYNC CONFIGURATION
# ============================================
OFFLINE_QUEUE_MAX_SIZE=100
OFFLINE_QUEUE_RETENTION_DAYS=7
OFFLINE_SYNC_INTERVAL_MINUTES=5
OFFLINE_GPS_POLL_INTERVAL_SECONDS=60

# ============================================
# GEO-FENCING (Advanced)
# ============================================
POSTGIS_ENABLED=false
GEOFENCE_CHECK_INTERVAL_SECONDS=30
GEOFENCE_ALERT_THRESHOLD_METERS=100

# ============================================
# ADMIN/POLICE SETTINGS
# ============================================
POLICE_SOS_NOTIFICATION_DELAY_MINUTES=5
POLICE_ESCALATION_TIMEOUT_MINUTES=30
AUDIT_LOG_RETENTION_DAYS=90

# ============================================
# GDPR/PRIVACY
# ============================================
GDPR_DATA_RETENTION_DAYS=730
USER_DATA_EXPORT_ENABLED=true
ACCOUNT_DELETION_ENABLED=true
ENCRYPTION_KEY=your-encryption-key-32-chars

# ============================================
# TESTING/DEVELOPMENT
# ============================================
TEST_MODE=false
MOCK_SMS=false
MOCK_EMAIL=false
MOCK_GEOLOCATION=false
SEED_DEMO_DATA=false
